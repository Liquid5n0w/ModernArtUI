<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#ffffffff"
    android:id="@+id/mainLayout">

    <TextView
        android:layout_width="130dp"
        android:layout_height="102dp"
        android:id="@+id/box1"
        android:layout_gravity="left|top"
        android:background="#ff53fcff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/box2"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/box1"
        android:layout_toEndOf="@+id/box1"
        android:background="#ff4460ff" />

    <TextView
        android:layout_width="120dp"
        android:layout_height="300dp"
        android:id="@+id/box3"
        android:layout_alignBottom="@+id/seekBar"
        android:layout_centerHorizontal="true"
        android:background="#ff44ff48" />

    <TextView
        android:layout_width="70dp"
        android:layout_height="340dp"
        android:id="@+id/box4"
        android:layout_alignBottom="@+id/seekBar"
        android:layout_below="@+id/box1"
        android:background="#ffff4900" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/box5"
        android:layout_below="@+id/box2"
        android:layout_alignEnd="@+id/seekBar"
        android:background="#ffff008b"
        android:layout_above="@+id/box3"
        android:layout_toEndOf="@+id/box3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/blackbox1"
        android:layout_below="@+id/box1"
        android:layout_alignBottom="@+id/box5"
        android:layout_alignEnd="@+id/box3"
        android:layout_toEndOf="@+id/box4"
        android:background="#ff000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/blackbox2"
        android:layout_alignTop="@+id/box3"
        android:layout_alignBottom="@+id/seekBar"
        android:layout_alignEnd="@+id/seekBar"
        android:layout_alignStart="@+id/box5"
        android:background="#ff000000" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:longClickable="false"
        android:max="1000" />

</RelativeLayout>
